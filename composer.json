{
    "name": "activewebsite/fancybox",
    "description": "fancyBox is a tool that offers a nice and elegant way to add zooming functionality for images, html content and multi-media on your webpages.",
    "repositories": [
        {
            "type": "composer",
            "url": "http://repo.booj.lan"
        }
    ],
    "require": {
        "components/jquery": "~1.10"
    },
    "extra": {
        "component": {
            "scripts": [
                "source/jquery.fancybox.js",
                "source/jquery.fancybox.pack.js",
            ],
            "files": [
                "source/*.js",
                "source/*.css",
                "source/*.gif",
                "source/*.png",
                "source/less/*.less",
                "source/less/helpers/*.less",
                "source/helpers/*.js",
                "source/helpers/*.css",
            ],
            "shim": {
                "deps": ["jquery"]
            }
        }
    }
}
